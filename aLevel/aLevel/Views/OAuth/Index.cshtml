@{
    ViewBag.Title = "Authorizing Application";
}

<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-2 col-xs-2"></div>
    <div class="col-lg-6 col-md-6 col-sm-8 col-xs-8">
        <img src="~/img/Logo.png" class="center-block" style="width: 100%">

        <h2 class="text-center h2-res">Authorise with OAuth</h2>

    </div>
    <div class="col-lg-3 col-md-3 col-sm-2 col-xs-2">
</div> 

