@model IEnumerable<aLevel.Models.TweetSearchModel>
@{
    ViewBag.Title = "Search";
}

<form method="GET" action="DoSearch">
    <label for="query">Please enter a query: </label><input id="query" type="text" name="query"/>
    <label for="count">Sample size: </label><input id="count" type="number" name="count" min="1" max="450" value="200"/>
    <label for="type">Result type: </label><select id="type" name="type"><option value="Mixed">Mixed</option>
        <option value="Popular">Popular</option>
        <option value="Recent">Recent</option>
        </select>
    <input type="submit"/>
</form>
